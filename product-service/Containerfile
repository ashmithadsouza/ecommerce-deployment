FROM eclipse-temurin:17-jre
# Link the image to the repo so it shows up in your Packages tab
LABEL org.opencontainers.image.source=https://github.com/${{ github.repository }}

WORKDIR /app

# Matches the target folder inside the product-service directory
COPY target/*.jar app.jar

# Product service usually runs on a different port than Auth (e.g., 8082)
EXPOSE 8082

ENTRYPOINT ["java", "-jar", "app.jar"]
